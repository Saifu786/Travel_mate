<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".friend.MyFriendsFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_imageAssetsFolder="images"
        app:lottie_loop="true" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/unifor_half_spacing"
        android:layout_marginRight="@dimen/unifor_half_spacing"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:id="@+id/contact_recycler"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unifor_half_spacing"
        android:layout_marginRight="@dimen/unifor_half_spacing"
        android:layout_below="@+id/contact_recycler"
        android:layout_marginTop="5dp"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="3"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/add_contact"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:layout_marginRight="@dimen/unifor_half_spacing"
        android:layout_marginBottom="@dimen/unifor_half_spacing"
        />

</RelativeLayout>
